{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "data": {
    "url": "data/usa-states.json",
    "format": {
      "type": "topojson",
      "feature": "states"
    }
  },
  "transform": [{
    "lookup": "id",
    "from": {
      "data": {
        "url": "data/road-deaths.csv"
      },
      "key": "id",
      "fields": ["deaths_per_pop"]
    }
  }],
  "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "deaths_per_pop",
      "type": "quantitative"
    }
  }
}
